<div class="white_bg padding_separator">
  <h1 class="main_heading no_top_margin"> <%= @concert.name %> </h1>
  <h2 class="address"> <%= @concert.get_address %> </h2>
  <div id="scores">
    <%= render partial: 'shared/display_scores', locals: { display: @concert } %> <%# TODO: No longer shared. %>
  </div>
  <div id="voting">
    <%= render partial: 'ratings/voting', locals: { concert_id:  @concert.id } %>
  </div>
</div>
<div id="show_videos" class="padding_separator">
	<%= render partial: 'videos/index' %>
  <div id="video_not_found"></div>
  <p> <b>
    <% if user_signed_in? %>
    	<%= link_to 'Add a Video', new_concert_video_path(@concert), remote: true %>
    <% else %>
        <%= link_to 'Sign In', new_user_session_path, class: 'orangey_link' %> or 
        <%= link_to 'Sign Up', new_user_registration_path, class: 'orangey_link' %> to add a video for this concert!
    <% end %>
  </b> </p>
  <div id="create_concert_or_video">
    <%# `@new_video` is only used when Javascript is absent. %>
    <%= render partial: 'videos/new' if @new_video %>
  </div>
</div>
<div id="concert_comments" class="padding_separator">
  <h2 class="no_top_margin"> Comments </h2>
  <div id="linked_comment">	
  	<%= render partial: 'comments/linked_comment' %>
  </div>
  <div class="comment_form">
    <% if user_signed_in? %>
  	  <%= render partial: 'comments/comment_form', locals: { commentable: @concert } %>
    <% else %>
        <b> <%= link_to 'Sign In', new_user_session_path %> or <%= link_to 'Sign Up', new_user_registration_path %>
        to post a comment! </b>
    <% end %>
  </div>
  <div class="comments">	
  	<%= render partial: 'comments/index', locals: { commentable: @concert }  %>
  </div>
</div>